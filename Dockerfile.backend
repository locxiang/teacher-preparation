# 后端 Dockerfile
FROM python:3.13-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# 复制后端依赖文件
COPY server/requirements.txt .

# 安装 Python 依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制后端应用代码
COPY server/ .

# 创建必要的目录
RUN mkdir -p uploads/audio

# 暴露端口
EXPOSE 5001

# 启动命令
CMD ["python", "app.py"]

